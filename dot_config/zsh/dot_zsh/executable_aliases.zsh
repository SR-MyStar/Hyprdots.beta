# Lazygit & git
alias gg="git clone"
alias lg="lazygit"
# 重新加载zsh
alias reload="source $ZDOTDIR/.zshrc"
# Edit
alias sudovim="sudoedit"
alias cdzsh="cd $ZDOTDIR"
alias cddot="cd $ZDOTDIR/.zsh"
# Neofetch
alias s="neofetch | lolcat"
alias n="neofetch"
# Clear sceen
alias c="clear"
# List files
alias ls="eza --icons -h"
alias lt="eza -aTh --icons"
alias ll="eza -lagMh --time-style iso --icons"
alias lll="eza -lagMh --time-style long-iso --icons"
alias llg="eza -lagMh --time-style iso --icons --git"
alias la="eza --icons -ha"
# Grep
alias grep="grep --color=auto"
# Diff
alias diff="diff --color=auto"
# Cat
alias ccat="highlight --out-format=ansi"
# Yazi
alias lf="yazi"
# Duf
alias duf="duf -theme ansi"
# Delta
alias delta="delta --show-syntax-themes Catppuccin-mocha -s"

